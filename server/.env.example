# MongoDB Atlas connection string (replace <username>, <password>, <cluster> and <dbname>)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# Meta WhatsApp
META_VERIFY_TOKEN=your-verify-token
META_ACCESS_TOKEN=EAA... (WhatsApp Cloud API token)
META_PHONE_NUMBER_ID=123456789
META_APP_SECRET=your_app_secret

# Admin access
ADMIN_SECRET=supersecretbearertoken

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
SENDGRID_API_KEY=SG.xxxxxx
FROM_EMAIL=no-reply@yourdomain.com
TO_EMAIL=you@yourdomain.com

# (Optional) Google Ads server-side conversion credentials
# GOOGLE_ADS_CUSTOMER_ID=
# GOOGLE_CONVERSION_ID=
# GOOGLE_CONVERSION_LABEL=

PORT=5000